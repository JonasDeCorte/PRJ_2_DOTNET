@model IEnumerable<projecten2.Models.Domain.Gebruiker>

@{
    ViewData["Title"] = "Gebruikers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Brewer" asp-action="Create">Voeg gebruiker toe</a>
</p>

<table class="table table-striped table-sm table-bordered">
    <tr>
        <th>Voornaam</th>
        <th>Naam</th>
        <th>Status </th>
        <th>Tickets </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Naam</td>
            <td>@item.Voornaam</td>
            <td>@item.Status</td>
        </tr>
    }
