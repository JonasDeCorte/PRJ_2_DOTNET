@model projecten2.Models.ViewModels.TicketEditViewModel

@{ ViewData["Title"] = (bool)ViewData["IsEdit"] ? "Ticket wijzigen" : "Nieuw ticket aanmaken"; }
<h1>@ViewData["Title"]</h1>

<!--<h4>TicketEditViewModel</h4> -->
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
        
            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" asp-items="@(ViewData["ticketTypes"] as SelectList)" class="form-control">
                    <option value="">-- select ticket type --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <input asp-for="Omschrijving" class="form-control" />
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opmerkingen" class="control-label"></label>
                <input asp-for="Opmerkingen" class="form-control" />
                <span asp-validation-for="Opmerkingen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
