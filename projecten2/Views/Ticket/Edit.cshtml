@model projecten2.Models.ViewModels.TicketEditViewModel

@{ ViewData["Title"] = (bool)ViewData["IsEdit"] ? "Ticket wijzigen" : "Nieuw ticket aanmaken"; }
<h1>@ViewData["Title"]</h1>

<!--<h4>TicketEditViewModel</h4> -->
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Titel" class="control-label"></label>
                <input asp-for="Titel" class="form-control" />
                <span asp-validation-for="Titel" class="text-danger"></span>
            </div>
            @if (!(bool)ViewData["IsEdit"]) { 
            <div class="form-group">
                <label asp-for="ContractId" class="control-label"></label>
                <select asp-for="ContractId" asp-items="@(ViewData["contractenKlant"] as SelectList)" class="form-control">
                    <option value="">-- Contract --</option>
                </select>
            </div>
            }
            <div class="form-group">
                <label asp-for="TicketTypeId" class="control-label"></label>
                <select asp-for="TicketTypeId" asp-items="@(ViewData["ticketTypes"] as SelectList)" class="form-control">
                    <option value="">-- Prioriteit --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Omschrijving" class="control-label"></label>
                <textarea asp-for="Omschrijving" class="form-control"> </textarea>
                <span asp-validation-for="Omschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opmerkingen" class="control-label"></label>
                <textarea asp-for="Opmerkingen" class="form-control"> </textarea>
                <span asp-validation-for="Opmerkingen" class="text-danger"></span>
            </div>
            <div>
                <button class="btn btn-primary" type="submit">Ticket opslaan</button>
                <a asp-action="Index" class="btn btn-secondary">Terug</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
