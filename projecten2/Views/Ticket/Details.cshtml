@model projecten2.Models.Domain.Ticket

@{ ViewData["Title"] = "Details"; }

<div class="w-75 mx-auto">
    <h2>Ticket details</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketNr)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketNr)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AanmaakDatum)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.AanmaakDatum)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LaatstGewijzigd)
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.LaatstGewijzigd)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Opmerkingen)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Opmerkingen)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TicketStatus)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TicketStatus)
        </dd>
    </dl>
    <div>
        <a style='background: #cad50c' class="btn btn-primary border-0" asp-area="Identity" asp-page="/Streaming/IndexStreaming" asp-route-id="@Model.TicketNr">Bijlages weergeven</a>
        <a style='background: #4591c6' class="btn btn-primary border-0" asp-area="Identity" asp-page="/Streaming/BufferedMultipleFileUploadDb" asp-route-id="@Model.TicketNr">Bijlage toevoegen</a>
        <a asp-action="Index" class="btn btn-secondary border-0">Terug</a>
    </div>
</div>
