@model projecten2.Models.Domain.Contract

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Contract details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Contract titel:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractTitel)
        </dd>
        <dt class = "col-sm-2">
            Doorloop tijd:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Doorlooptijd) jaar
        </dd>
        <dt class="col-sm-2">        
            Startdatum:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.StartDatum)
        </dd>
        <dt class = "col-sm-2">
            Einddatum:
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:dd/MM/yyyy}", Model.EindDatum)
        </dd>
        <dt class = "col-sm-2">
            Contract status:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractStatus)
        </dd>
        <dt class = "col-sm-2">
            Contract type:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContractType.Naam)
        </dd>
    </dl>
</div>
<div>
    <a style='background: #4591c6'asp-action="Index" class="btn btn-primary">Terug naar de lijst met contracten</a>
</div>
